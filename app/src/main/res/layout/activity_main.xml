<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_previous"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_alignBottom="@+id/date_selector_recycler_view"
            android:layout_alignTop="@+id/date_selector_recycler_view"
            android:src="@drawable/baseline_keyboard_double_arrow_left_24"
            tools:ignore="ContentDescription" />


        <com.geekydroid.androidbook.DateSelectorRecyclerView
            android:id="@+id/date_selector_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/iv_next"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/iv_previous" />

        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_alignBottom="@+id/date_selector_recycler_view"
            android:layout_alignTop="@+id/date_selector_recycler_view"
            android:src="@drawable/baseline_keyboard_double_arrow_right_24"
            tools:ignore="ContentDescription" />


    </RelativeLayout>
</layout>